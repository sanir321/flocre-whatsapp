# Evolution Lab - Production Environment Variables

# ============================================
# Evolution API Configuration
# ============================================

# Database (REQUIRED)
DATABASE_ENABLED=true
DATABASE_CONNECTION_URI=postgresql://postgres:password@host:5432/evolution
DATABASE_CONNECTION_CLIENT_NAME=evolution_exchange

# Server
SERVER_TYPE=http
SERVER_PORT=8080
SERVER_URL=https://your-app.railway.app

# Authentication (REQUIRED)
AUTHENTICATION_API_KEY=your-secure-api-key-here
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=true

# Webhook
WEBHOOK_ENABLED=true
WEBHOOK_URL=http://localhost:3000/webhook/evolution

# ============================================
# Flowcore AI Configuration
# ============================================

# Supabase (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Evolution API Connection
EVO_API_URL=http://localhost:8080
EVO_API_KEY=your-secure-api-key-here

# Flowcore API Security (REQUIRED)
FLOWCORE_API_KEY=your-flowcore-api-key

# Server
PORT=3000

# ============================================
# Node Environment
# ============================================
NODE_ENV=production
